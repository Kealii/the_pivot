<h1>Categories</h1>

<table class="table">
  <tr>
    <th>Category</th>
    <th>Delete</th>
    <th>Items</th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td>
        <%= link_to item.title, item, class: "lead-column" %>
      </td>
      <td>
        <%= link_to "Edit", item, class: "btn btn-success lead-column" %>
      </td>
      <td>
        <%= link_to item_path(item), method: :delete, class: "btn btn-danger" do %>
          Delete
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "Create New Item", new_admin_item_path, class: "btn btn-primary btn-large" %>
