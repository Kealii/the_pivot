<div class="container">
  <% @orders.each do |order| %>
    <h1>Order <%= order.id %></h1>

    <table class="table">
      <tr>
        <th>Title</th>
        <th>Brief Description</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Subtotal</th>
      </tr>
      <% order.each do |display_item| %>
        <tr id='<%= display_item.item.title %>'>
          <td>
            <%= link_to display_item.item.title, display_item.item, class: 'lead-column' %>
          </td>
          <td><%= display_item.item.description %></td>
          <td><%= dollar_string(display_item.price) %></td>
          <td><%= display_item.quantity %></td>
          <td><%= dollar_string(display_item.subtotal) %></td>
        </tr>
      <% end %>
      <tr>
        <td></td><td></td><td></td>
        <td><h4 class="text-right">Total:</h4></td>
        <td><h4><%= dollar_string(order.total) %></h4></td>
      </tr>
      <tr>
        <td></td><td></td><td></td>
        <td><h4 class="text-right">Proposed to Pay:</h4></td>
        <td><h4><%= dollar_string(order.total) %></h4></td>
      </tr>
      <tr>
        <td></td><td></td><td></td>
        <td><h4 class="text-right">Donated:</h4></td>
        <td><h4><%= "$0.00" %></h4></td>
      </tr>
    </table>

  <% end %>
</div>
